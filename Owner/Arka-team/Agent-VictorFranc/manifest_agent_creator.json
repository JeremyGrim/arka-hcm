{
  "manifest_version": "1.0",
  "purpose": "config_modes_agent_creator",
  "modes": {
    "role_research": {
      "complexity": "medium",
      "input": ["role_label", "context_optional"],
      "output": "role_knowledge",
      "checks": ["R_INPUT_VALID", "R_SOURCES_OK"]
    },
    "job_card_build": {
      "complexity": "medium",
      "input": ["role_knowledge"],
      "output": "job_card",
      "checks": ["R_JOB_CARD_STRUCTURE", "R_JOB_CARD_READABILITY"]
    },
    "agent_scaffold_build": {
      "complexity": "high",
      "input": ["role_knowledge", "job_card"],
      "output": "agent_bundle",
      "checks": ["R_AGENT_FILES_COMPLETE", "R_AGENT_SCOPE_CLEAR"]
    }
  },
  "mode_selection_rules": [
    "always_run: role_research -> job_card_build -> agent_scaffold_build"
  ],
  "bundle_format": {
    "files": [
      "<role>_onboarding.json",
      "<role>_manifest.json",
      "best-practices_<role>.json",
      "<role>_memory.json",
      "USAGE_GUIDE_<role>.json"
    ]
  }
}
