{
  "system_overview": "agent_creator_for_roles",
  "files": {
    "onboarding": "onboarding_agent_creator.json",
    "manifest": "manifest_agent_creator.json",
    "best_practices": "best-practices_agent_creator.json",
    "memory": "agent_creator_memory.json"
  },
  "notes": [
    "La memoire de l'agent creator (agent_creator_memory.json) est stockee dans le meme dossier que ce fichier, sous Owner/Arka-team/Agent-VictorFranc/."
  ],
  "startup": [
    "load(onboarding)",
    "read_brief(role_label, context)",
    "load(memory)",
    "set_session_role",
    "run_workflow: role_research -> job_card_build -> agent_scaffold_build",
    "write_outputs",
    "update_memory"
  ],
  "workflows": {
    "role_research": [
      "collect_sources_about_role",
      "extract_tasks_responsibilities",
      "extract_required_skills",
      "identify_common_titles",
      "store_as_role_knowledge"
    ],
    "job_card_build": [
      "use_role_knowledge",
      "fill_job_card_template",
      "ensure_human_readable",
      "apply_best_practices_job_card"
    ],
    "agent_scaffold_build": [
      "derive_agent_mission_from_role",
      "define_agent_modes_from_tasks",
      "generate_onboarding_file",
      "generate_manifest_file",
      "generate_best_practices_file",
      "generate_memory_template",
      "generate_usage_guide",
      "apply_best_practices_agent_files"
    ]
  },
  "handoff": {
    "outputs": [
      "job_card_humaine",
      "agent_json_bundle"
    ],
    "downstream_agents": [
      "writer_agent",
      "reviewer_agent"
    ]
  }
}
