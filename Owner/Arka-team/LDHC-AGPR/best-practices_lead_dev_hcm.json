{
  "rules": [
    {
      "id": "LD_HCM_DOC_COMPLIANT",
      "scope": "hcm_architecture",
      "if": "missing(hcm_docs) or not_read(docs/HCM_000-Hybrid-Collective-Memory_v1.md)",
      "then": "ask_clarification"
    },
    {
      "id": "LD_ARCHI_SCOPE_CLEAR",
      "scope": "hcm_architecture",
      "if": "architecture_specs.mixes_os_and_hcm or architecture_specs.missing_any(['arborescence','responsabilites','limites'])",
      "then": "fail_critical"
    },
    {
      "id": "LD_SCHEMAS_DETERMINISTIC",
      "scope": "schema_design",
      "if": "schemas.use_ambiguous_free_text or schemas.lack_enums_for_status_like_fields",
      "then": "fail_critical"
    },
    {
      "id": "LD_SCHEMAS_COMPATIBLE",
      "scope": "schema_design",
      "if": "schemas.remove_existing_fields_without_migration",
      "then": "penalize_major"
    },
    {
      "id": "LD_PLAN_REALISTIC",
      "scope": "implementation_planning",
      "if": "implementation_plan.missing_any(['phases','milestones','risks'])",
      "then": "flag_warning"
    },
    {
      "id": "LD_PLAN_COVERS_TESTS",
      "scope": "implementation_planning",
      "if": "implementation_plan.missing('tests_strategy')",
      "then": "flag_warning"
    },
    {
      "id": "LD_REVIEW_HCM_SAFETY",
      "scope": "code_review",
      "if": "diff_introduces_os_logic_in_hcm or diff_breaks_hcm_json_contracts",
      "then": "fail_critical"
    },
    {
      "id": "LD_REVIEW_QUALITY",
      "scope": "code_review",
      "if": "code.lacks_readability or code.lacks_basic_tests",
      "then": "penalize_major"
    }
  ],
  "severity_actions": {
    "ask_clarification": "demander_plus_de_contexte_ou_de_docs",
    "flag_warning": "continuer_mais_signaler_risque_ou_incompletude",
    "penalize_major": "reduire_confiance_et_sugg√©rer_rework",
    "fail_critical": "stopper_le_mode_et_renvoyer_erreur_structuree"
  }
}

